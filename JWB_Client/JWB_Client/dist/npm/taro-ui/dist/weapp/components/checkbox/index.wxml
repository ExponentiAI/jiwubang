<block wx:if="{{$taroCompReady}}">
    <view class="{{rootCls}}" style="{{anonymousState__temp}}">
        <view class="{{option.optionCls}}" wx:key="value" bindtap="handleClick" wx:for="{{loopArray2}}" wx:for-item="option" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{idx}}">
            <view class="at-checkbox__option-wrap">
                <view class="at-checkbox__option-cnt">
                    <view class="at-checkbox__icon-cnt"><text class="at-icon at-icon-check"></text>
                    </view>
                    <view class="at-checkbox__title">{{option.label}}</view>
                </view>
                <block wx:if="{{option.desc}}">
                    <view class="at-checkbox__desc">{{option.desc}}</view>
                </block>
            </view>
        </view>
    </view>
</block>